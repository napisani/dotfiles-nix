{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "openai/gpt-5-codex",
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      },
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": false
    },
    "mongodb": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mongodb-mcp-server@latest",
        "--readOnly"
      ],
      "environment": {
        "MDB_MCP_CONNECTION_STRING": "mongodb://localhost:27017/?directConnection=true"
      }
    },
    "postgres": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "postgres-mcp-server@latest",
        "--readOnly"
      ],
      "environment": {
        "PG_MCP_CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/postgres"
      }
    },
    "gh_codesearch": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  },
  "tools": {},
  "keybinds": {
    "input_submit": "ctrl+g",
    "input_newline": "return"
  },
  "plugin": [
    "opencode-antigravity-auth@beta"
  ]
}
