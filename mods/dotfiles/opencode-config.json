{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "openai/GPT-5",
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      },
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": false
    }
  }
}
