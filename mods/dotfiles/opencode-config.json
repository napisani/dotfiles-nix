{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "openai/gpt-5-codex",
  "autoshare": false,
  "autoupdate": true,
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      },
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "uvx",
        "--python=3.12",
        "mcp-atlassian",
        "--no-jira-ssl-verify",
        "--no-confluence-ssl-verify"
      ],
      "environment": {
        "JIRA_URL": "https://axionray.atlassian.net",
        "JIRA_USERNAME": "nick.pisani@axionray.com",
        "JIRA_API_TOKEN": "{env:JIRA_API_TOKEN}"
      },
      "enabled": true
    },
    "mongodb": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mongodb-mcp-server@latest",
        "--readOnly"
      ],
      "environment": {
        "MDB_MCP_CONNECTION_STRING": "mongodb://localhost:27017/?directConnection=true"
      },
      "enabled": false
    },
    "postgres": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "postgres-mcp-server@latest",
        "--readOnly"
      ],
      "environment": {
        "PG_MCP_CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/postgres"
      },
      "enabled": false
    },
    "gh_codesearch": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  },
  "tools": {},
  "command": {
    "ticket-and-pr": {
      "template": "You are compiling a concise status that links a Jira/GitHub ticket with its pull request details.\nInput context: $ARGUMENTS\nRespond with:\n- Ticket: include key, title, owner, current status, and blockers.\n- PR: summarize scope, testing status, and review/merge requirements.\n- Next Actions: bullet list of concrete steps for the assignee and reviewers.\nKeep it actionable and mention any missing info to request from the user.",
      "description": "Summarize ticket + PR status and next steps",
      "agent": "build"
    }
  },
  "keybinds": {
    "input_submit": "ctrl+g",
    "input_newline": "return"
  },
  "plugin": [
    "opencode-antigravity-auth@beta",
    "cursor-acp"
  ],
  "provider": {
    "cursor-acp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "cursor-acp",
      "options": {
        "baseURL": "http://127.0.0.1:32124/v1"
      },
      "models": {
        "auto": {
          "name": "Auto"
        },
        "composer-1": {
          "name": "Composer 1"
        },
        "gpt-5.2": {
          "name": "GPT-5.2"
        },
        "gpt-5.2-codex": {
          "name": "GPT-5.2 Codex"
        },
        "gpt-5.2-codex-high": {
          "name": "GPT-5.2 Codex High"
        },
        "gpt-5.2-codex-low": {
          "name": "GPT-5.2 Codex Low"
        },
        "gpt-5.2-codex-xhigh": {
          "name": "GPT-5.2 Codex Extra High"
        },
        "gpt-5.2-codex-fast": {
          "name": "GPT-5.2 Codex Fast"
        },
        "gpt-5.2-codex-high-fast": {
          "name": "GPT-5.2 Codex High Fast"
        },
        "gpt-5.2-codex-low-fast": {
          "name": "GPT-5.2 Codex Low Fast"
        },
        "gpt-5.2-codex-xhigh-fast": {
          "name": "GPT-5.2 Codex Extra High Fast"
        },
        "gpt-5.1-codex-max": {
          "name": "GPT-5.1 Codex Max"
        },
        "gpt-5.1-codex-max-high": {
          "name": "GPT-5.1 Codex Max High"
        },
        "opus-4.6-thinking": {
          "name": "Claude 4.6 Opus (Thinking)"
        },
        "gpt-5.2-high": {
          "name": "GPT-5.2 High"
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro"
        },
        "opus-4.6": {
          "name": "Claude 4.6 Opus"
        },
        "opus-4.5": {
          "name": "Claude 4.5 Opus"
        },
        "opus-4.5-thinking": {
          "name": "Claude 4.5 Opus (Thinking)"
        },
        "sonnet-4.5": {
          "name": "Claude 4.5 Sonnet"
        },
        "sonnet-4.5-thinking": {
          "name": "Claude 4.5 Sonnet (Thinking)"
        },
        "gpt-5.1-high": {
          "name": "GPT-5.1 High"
        },
        "gemini-3-flash": {
          "name": "Gemini 3 Flash"
        },
        "grok": {
          "name": "Grok"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "ollama",
      "options": {
        "baseURL": "https://ollama.napisani.xyz/v1"
      },
      "models": {
        "qwen3:1.7b": {
          "name": "qwen3:1.7b"
        },
        "qwen3:0.6b": {
          "name": "qwen3:0.6b"
        }
      }
    }
  }
}
